<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.dogsontherun.pocketpupv2.AddBillingInfo"
                android:background="#24427E"
                android:id="@+id/billing_form_container">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/bill_input_form"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/bill_address_input"
                android:layout_row="0"
                android:layout_column="11"
                android:hint="Address"
                android:textColor="#24427E"
                android:backgroundTint="#fff"
                android:typeface="sans"
                android:textIsSelectable="false"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/bill_city_input"
                android:layout_row="1"
                android:layout_column="11"
                android:hint="City"
                android:textColor="#24427E"
                android:backgroundTint="#fff"
                android:typeface="sans"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/bill_state_input"
                android:layout_row="2"
                android:layout_column="11"
                android:hint="State"
                android:textColor="#24427E"
                android:backgroundTint="#fff"
                android:typeface="sans"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:padding="5dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/bill_zip_input"
                android:layout_row="3"
                android:layout_column="11"
                android:hint="Zip"
                android:textColor="#24427E"
                android:backgroundTint="#fff"
                android:typeface="sans"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:padding="5dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Same as Home"
                android:id="@+id/checkBox_sameAsHome"
                android:layout_row="9"
                android:layout_column="11"
                android:checked="false"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:backgroundTint="#fff"
                android:buttonTint="#fff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/bill_name_input"
                android:layout_row="11"
                android:layout_column="11"
                android:hint="Name of Cardholder"
                android:textColor="#24427E"
                android:backgroundTint="#fff"
                android:typeface="sans"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/bill_card_input"
                android:layout_row="12"
                android:layout_column="11"
                android:hint="Card Number"
                android:textColor="#24427E"
                android:backgroundTint="#fff"
                android:typeface="sans"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:padding="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Confirm and Proceed"
                android:id="@+id/billing_btn"
                android:layout_row="21"
                android:layout_column="11"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:textColor="#24427E"
                android:background="#fff"
                android:alpha=".8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:typeface="sans"
                android:maxHeight="45dp"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Skip"
                android:id="@+id/skip_btn"
                android:background="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                android:layout_row="28"
                android:layout_column="11"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:textColor="#24427E"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/bill_csv_input"
                android:layout_row="13"
                android:layout_column="11"
                android:hint="CSV"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_row="20"
                android:layout_column="11"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/bill_exp_year_input"
                    android:layout_row="18"
                    android:layout_column="11"
                    android:hint="Exp Year"
                    android:textColor="#24427E"
                    android:backgroundTint="#fff"
                    android:typeface="sans"
                    android:background="#fff"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/bill_exp_month_input"
                    android:maxWidth="40dp"/>

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/bill_exp_month_input"
                    android:layout_row="14"
                    android:layout_column="11"
                    android:hint="Exp Month"
                    android:textColor="#24427E"
                    android:backgroundTint="#fff"
                    android:typeface="sans"
                    android:background="#fff"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:layout_alignParentTop="true"
                    android:maxWidth="40dp"
                    android:layout_marginRight="15dp"/>

            </RelativeLayout>


        </GridLayout>
    </ScrollView>

</RelativeLayout>
