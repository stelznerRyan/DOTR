<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.dogsontherun.pocketpupv2.Home"
                android:background="#fff">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/dotr_landing_bg"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/service_description_textview"
        android:text="Select an option from the top and then press the request pet service button"
        android:textColor="#fff"
        android:textSize="20dp"
        android:typeface="sans"
        android:singleLine="false"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/requestServiceBtn"
        android:minHeight="100dp"
        android:capitalize="characters"
        android:padding="40sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Request Pet Service"
        android:id="@+id/requestServiceBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minHeight="60sp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:background="#24427E"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#823fb3ea">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dog Walking &amp; Running"
                android:id="@+id/walking_serv_btn"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:alpha=".8"
                android:textColor="#24427E"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field Trips"
                android:id="@+id/fieldtrip_serv_btn"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:alpha=".8"
                android:textColor="#24427E"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boarding"
                android:id="@+id/boarding_serv_btn"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:alpha=".8"
                android:textColor="#24427E"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#823fb3ea"
            android:paddingLeft="5dp"
            android:paddingRight="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vacation &amp; Travel Care"
                android:id="@+id/vacation_serv_btn"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:alpha=".8"
                android:textColor="#24427E"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pet Taxi"
                android:id="@+id/taxi_serv_btn"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:alpha=".8"
                android:textColor="#24427E"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daycare"
                android:id="@+id/daycare_serv_btn"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginBottom="10dp"
                android:alpha=".8"
                android:textColor="#24427E"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
