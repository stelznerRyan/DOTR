<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.dogsontherun.pocketpupv2.AddPet"
                android:background="#24427E">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/addPet_form"
            android:layout_alignParentEnd="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/pet_name_input"
                android:layout_row="2"
                android:layout_column="0"
                android:hint="Name"
                android:textColor="#212121"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pet_breed_input"
                android:layout_row="3"
                android:layout_column="0"
                android:hint="Breed"
                android:textColor="#212121"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pet_personality_input"
                android:layout_row="4"
                android:layout_column="0"
                android:hint="Personality"
                android:textColor="#212121"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pet_medication_input"
                android:layout_row="5"
                android:layout_column="0"
                android:hint="Medication"
                android:textColor="#212121"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pet_feeding_input"
                android:layout_row="6"
                android:layout_column="0"
                android:hint="Feeding Instructions"
                android:textColor="#212121"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pet_leash_input"
                android:layout_row="7"
                android:layout_column="0"
                android:hint="Leash Location"
                android:textColor="#212121"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:padding="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/pet_notes_input"
                android:layout_row="8"
                android:layout_column="0"
                android:hint="Special Notes"
                android:textColor="#212121"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:padding="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Add Another Pet"
                android:id="@+id/add_another_pet_btn"
                android:layout_weight="1"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="#fff"
                android:textColor="#24427E"
                android:alpha=".8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:maxHeight="45dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Done"
                android:id="@+id/done_adding_pets_btn"
                android:layout_row="11"
                android:layout_column="0"
                android:background="#fff"
                android:textColor="#24427E"
                android:alpha=".8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:maxHeight="45dp"
                />

        </GridLayout>

</RelativeLayout>
