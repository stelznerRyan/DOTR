<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.dogsontherun.pocketpupv2.AddEmergencyContact"
                android:background="#24427E"
                android:id="@+id/em_wrapper">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/ec_contact_form"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/ec_name"
                android:layout_row="0"
                android:layout_column="11"

                android:hint="Name"
                android:textColor="#24427E"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:typeface="sans"
                android:padding="5dp"
                android:alpha=".7"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/ec_email"
                android:layout_row="1"
                android:layout_column="11"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColor="#24427E"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:typeface="sans"
                android:padding="5dp"
                android:alpha=".7"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/ec_phone"
                android:layout_row="2"
                android:layout_column="11"
                android:inputType="phone"
                android:hint="Phone"
                android:textColor="#24427E"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:typeface="sans"
                android:padding="5dp"
                android:alpha=".7"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ec_spare"
                android:layout_row="4"
                android:layout_column="11"
                android:hint="Has a Spare Key?"
                android:textColor="#24427E"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:typeface="sans"
                android:padding="5dp"
                android:alpha=".7"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ec_instructions"
                android:layout_row="5"
                android:layout_column="11"
                android:hint="Instructions for Contact"
                android:textColor="#24427E"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:typeface="sans"
                android:padding="5dp"
                android:alpha=".7"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Emergency Contact"
                android:id="@+id/ec_add_btn"
                android:layout_row="17"
                android:layout_column="11"
                android:layout_gravity="bottom"
                android:background="#fff"
                android:textColor="#24427E"
                android:backgroundTint="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Skip"
                android:id="@+id/skip_btn"
                android:background="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/scrollView3"
                android:layout_alignEnd="@+id/scrollView3"
                android:layout_row="28"
                android:layout_column="11"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:textColor="#24427E"
                />

        </GridLayout>
    </ScrollView>

</RelativeLayout>
