<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.dogsontherun.pocketpupv2.AddHomeAddress"
                android:background="#24427E">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="false">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/createProfile_form"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/home_address_input"
                android:layout_row="0"
                android:layout_column="11"
                android:hint="Address"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="#fff"
                android:alpha=".8"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_city_input"
                android:layout_row="1"
                android:layout_column="11"
                android:hint="City"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="#fff"
                android:alpha=".8"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_state_input"
                android:layout_row="2"
                android:layout_column="11"
                android:hint="State"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="#fff"
                android:alpha=".8"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/home_zip_input"
                android:layout_row="3"
                android:layout_column="11"
                android:hint="Zip"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="#fff"
                android:alpha=".8"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm and Proceed"
                android:id="@+id/confirm_btn"
                android:layout_row="19"
                android:layout_column="11"
                android:layout_gravity="bottom"
                android:textColor="#24427E"
                android:background="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Skip"
                android:id="@+id/skip_btn"
                android:background="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/scrollView2"
                android:layout_alignEnd="@+id/scrollView2"
                android:layout_row="28"
                android:layout_column="11"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:textColor="#24427E"
                />

        </GridLayout>
    </ScrollView>

</RelativeLayout>
